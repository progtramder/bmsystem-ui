.cover {
  width: 100%;
  background-color: white;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.cover image {
  width: 100%;
  max-height: 500rpx;
}
.cover view {
  padding: 30rpx 30rpx;
  font-weight: bold;
}
.album-brief{
  background-color: #FBFBFB;
  color: gray;
  padding: 30rpx 30rpx;
  white-space: pre-wrap;
}

.album-container {
  margin-top: 5rpx;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 20rpx;
}

.album-content {
  display: flex;
  flex-direction: column;
}

.album-image {
  width: 690rpx;
  margin-top: 5rpx;
}

.album-video {
  height: 500rpx;
  width: 690rpx;
  margin-top: 5rpx;
}
.album-video video {
  width: 100%;
  height: 500rpx;
}
