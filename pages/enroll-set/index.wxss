.page-body {
  margin-bottom: 100rpx;
}
.event-wrapper {
  display: flex;
  flex-direction: column;
  margin: 80rpx 0;
}
.nav-item {
  position: relative;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-style: solid;
  border-width: 5rpx;
  border-color:beige;
  margin: 0 50rpx 30rpx;
  border-radius: 10rpx;
  color: orange;
  font-weight: bold;
  font-size: 35rpx;
  background-color: #FBFBFB;
}
.icon {
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
}
.edit-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
}
.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 101;
  background-color: black;
  opacity: 0.3;
}

.popup {
  background-color: #A4A4A4;
  position: fixed;
  width: 100%;
  bottom: -500rpx;
  left: 0;
  z-index: 101;
}
.popup-show {
  transform: translateY(-500rpx);
  transition: .3s;
}

.popup button {
  background-color: white;
  border-radius: 0;
  height: 120rpx;
  line-height: 120rpx;
}
