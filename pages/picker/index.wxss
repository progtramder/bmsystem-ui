
.picker {
  width: 90%;
  height: 80rpx;
  border-style: solid;
  border-color: beige;
  border-width: 5rpx;
  margin: 0 auto;
}
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 101;
  background-color: black;
  opacity: 0.3;
}

.picker-container {
  background-color:white;
  position: fixed;
  width: 100%;
  bottom: -1000rpx;
  left: 0;
  z-index: 101;
}
.picker-container-show {
  transform: translateY(-1000rpx);
  transition: .3s;
}

.select-window-line {
  position: absolute;
  background-color: #DDDDDD;
  height: 2rpx;
  left: 0;
  right: 0;
}

.control-bar {
  height: 80rpx;
  border-bottom-style: solid;
  border-bottom-color: #F0F0F0;
  border-bottom-width: 2rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.control-bar view {
  width: 180rpx;
  line-height: 80rpx;
  text-align: center;
  color: gray;
  font-size: 34rpx;
}

.selections {
  position: relative;
  box-sizing: border-box;
  transform-style: preserve-3d;
  perspective: 800px;
  overflow: hidden;
}

.selections view {
  position: absolute;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  top: 50%;
  left: 0;
  width: 100%;
  backface-visibility: hidden;
  z-index: 998;
  
}

.text-gray {
  color: gray;
}